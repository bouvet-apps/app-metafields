<?xml version="1.0" encoding="UTF-8"?>
<site>
	<config>
		<field-set name="settings">
			<label>Open Graph default settings</label>
			<items>
				<input name="seo-image" type="ImageSelector">
					<label>Image</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<input name="seo-title" type="TextLine">
					<label>Title</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
				<input name="seo-description" type="TextArea">
					<label>Description</label>
					<occurrences minimum="0" maximum="1"/>
				</input>
			</items>
		</field-set>
	</config>
	<x-data mixin="meta-data" /><!-- This actually adds this mixin to all CTY on current site ^^ -->
	<filters>
    	<response-filter name="add-metadata" order="10"/>
	</filters>
</site>
